<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/glow"/>
            <stroke android:color="#FF444444"
                android:width="0.1dp"/>
        </shape>
    </item>

    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">

        <scale android:level="2">
            <shape android:shape = "oval">
                <solid
                    android:color="@color/tool_color"/>
            </shape>
        </scale>


    </item>







</layer-list>


